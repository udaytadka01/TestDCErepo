<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>GroupParentValidation</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Type, &apos;Group&apos;),
  OR(
    ISBLANK(ParentId),
    NOT(ISPICKVAL(Parent.Type, &apos;Organization&apos;))
  )
)</errorConditionFormula>
    <errorMessage>Groups must have a parent that is of the type &quot;Organization&quot;</errorMessage>
</ValidationRule>
